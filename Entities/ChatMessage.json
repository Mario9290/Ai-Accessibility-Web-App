{
  "name": "ChatMessage",
  "type": "object",
  "properties": {
    "message": {
      "type": "string",
      "description": "The message content"
    },
    "is_user": {
      "type": "boolean",
      "description": "Whether this message is from the user (true) or AI (false)"
    },
    "input_type": {
      "type": "string",
      "enum": [
        "text",
        "voice",
        "file"
      ],
      "description": "How the user provided input"
    },
    "file_url": {
      "type": "string",
      "description": "URL of uploaded file if input_type is file"
    },
    "suggested_task_helper": {
      "type": "boolean",
      "default": false,
      "description": "Whether AI suggested launching task helper mode"
    },
    "language": {
      "type": "string",
      "default": "en",
      "description": "Language of the message"
    }
  },
  "required": [
    "message",
    "is_user",
    "input_type"
  ]
}